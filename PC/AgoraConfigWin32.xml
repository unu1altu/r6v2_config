	<MaxStoredMessages>50</MaxStoredMessages>
	<!-- All sizes are in characters-->
	<MessageMaxBodySize>2048</MessageMaxBodySize>
	<MessageMaxSubjectSize>255</MessageMaxSubjectSize>
	<!-- Configuration for maximum number of recent players -->
	<MaxRecentPlayers>100</MaxRecentPlayers>		
