	<TaskTimeoutThreshold>30000</TaskTimeoutThreshold>
	<SessionPlayerTimeoutThreshold>29000</SessionPlayerTimeoutThreshold>
	<SessionPlayerHeartbeatPeriod>6000</SessionPlayerHeartbeatPeriod>
	<UpdateOfSessionOnServerPeriod>3600000</UpdateOfSessionOnServerPeriod>	
	<MessagingServiceTaskDelayPeriod>3000</MessagingServiceTaskDelayPeriod>
	<ClanServiceTaskDelayPeriod>5000</ClanServiceTaskDelayPeriod>			
